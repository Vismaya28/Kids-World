<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <div class="register-form">
                    <div class="title">
                        <h3>No Account? Register</h3>
                        <p>Registration takes less than a minute but gives you full control over your orders.</p>
                    </div>
                    <form class="row" action="/signup" method="post" id="form">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-fn">Name</label>
                                {{!-- <input name="firstName" class="form-control" type="text" id="reg-fn"> --}}
                                <input type="text" class="form-control" id="fname" name="fname" placeholder="Enter first Name">
                                <span id="errfName" style="color: crimson;"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-ln">Last Name</label>
                                <input name="lname" class="form-control" type="text" id="lname" placeholder="Enter last name">
                                <span id="errlName" style="color: crimson;"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-email">E-mail Address</label>
                                <input name="email" class="form-control" type="email" placeholder="Enter your email" id="email">
                                <span id="errEmail" style="color: crimson;"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-phone">Phone Number</label>
                                <input name="number" class="form-control" type="number" placeholder="Enter your phone number" id="phone">
                                <span id="errNumber" style="color: crimson;"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-pass">Password</label>
                                <input name="password" class="form-control" type="password" placeholder="Enter password" id="pass">
                                <span id="errpass" style="color: crimson;"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-pass-confirm">Confirm Password</label>
                                <input name="password2" class="form-control" type="password" placeholder="Confirm password" id="pass-confirm">
                                <span id="errpass2" style="color: crimson;"></span>

                            </div>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">Register</button>
                        </div>
                        <p class="outer-link">Already have an account? <a href="/login">Login Now</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


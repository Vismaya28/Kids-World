<section>
    <div class="container">
        <div class="row mt-4">
         <a href="/admin/add-product" class="btn btn-success ml-auto mb-5">Add Product</a>
        </div>
        <table class="table mt-5" id="productTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.category_name}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;height:50px" src="/images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" 
        class="btn btn-danger" onclick="deleteProduct('{{this.Name}} ?')">Delete</a>

        {{!-- class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a> --}}
        
        </td>
    </tr>    
    {{/each}}
  </tbody>
</table>
    </div>
</section>
